<% provide(:page_title, 'All Posts') %>

<div class="container">
  <div class="row">
    <<div class="card posts-card col-md-8 offset-md-2">
      <div class="card-header posts-header">
        <h3>Recent Blog Posts</h3>
      </div>
      <div class="card-block card-body">
        <ul class="list-group">
          <li class ="list-group-item postcard-body">
            <% @posts.each do |post| %>
              <h2 class="title"><%= link_to post.title, post %></h2>
              <p class="date"><%= post.created_at.strftime("%B, %d, %Y") %></p>
            <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>